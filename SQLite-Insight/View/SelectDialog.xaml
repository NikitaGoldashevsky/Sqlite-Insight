<Window x:Class="SQLite_Insight.View.SelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite_Insight.View"
        mc:Ignorable="d"
        Title="SelectionWindow" Height="160" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20, 10, 20, 15">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="QueryLabel" Content="Choose an option:" Grid.Row="0" FontSize="13"/>
        
        <ComboBox x:Name="OptionsComboBox" Height="25" Grid.Row="1"/>
        
        <Button Content="OK" Height="20" Width="60" Click="OkButton_Click" Grid.Row="2" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        
    </Grid>
</Window>
