<Window x:Class="SQLite_Insight.View.SelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite_Insight.View"
        mc:Ignorable="d"
        Title="SelectionWindow" Height="170" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20, 15">
            <Label x:Name="QueryLabel" Content="Choose an option:"/>
            <ComboBox x:Name="OptionsComboBox" Height="25" Margin="0,5,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                <Button Content="OK" Height="20" Width="60" Margin="0, 5, 5, 0" Click="OkButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
