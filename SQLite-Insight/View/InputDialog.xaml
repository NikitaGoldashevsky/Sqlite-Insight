<Window x:Class="SQLite_Insight.View.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite_Insight.View"
        mc:Ignorable="d"
        Height="150" Width="300" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="QueryLabel" Content="Please enter text:" Margin="10, 5, 10, 0" Grid.Row="0"/>
        <TextBox x:Name="InputTextBox" Height="20" Margin="10, 5, 10, 10" Grid.Row="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10" Grid.Row="2">
            <Button Content="OK" Height="20" Width="60" Click="OkButton_Click"/>
            <Button Content="Cancel" Height="20" Width="60" Click="CancelButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
